{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./packages/",
    "paths": {
      "@omc/server/*": ["server/src/*"],
      "@omc/client/*": ["client/src/*"],
      "@omc/shared/*": ["shared/src/*"],
      "~/*": ["client/src/*"],
      "@/*": ["client/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist"]
}
