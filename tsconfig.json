{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@omc/client/*": ["packages/client/src/*"],
      "@omc/server/*": ["packages/server/src/*"],
      "@omc/shared/*": ["packages/shared/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist", "**/.nuxt"]
}
