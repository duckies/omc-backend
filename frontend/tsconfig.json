{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@omc/server/*": ["../backend/src/*"],
      "@omc/client/*": ["../frontend/src/*"],
      "@omc/shared/*": ["../resources/*"],
      "~/*": ["../frontend/src/*"],
      "@/*": ["../frontend/src/*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "cookie-universal-nuxt"
    ]
  },
  "files": ["nuxt.config.ts"],
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
