{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "../",
    "paths": {
      "~/*": ["./frontend/*"],
      "@/*": ["./frontend/*"],
      "@backend/*": ["./backend/src/*"]
    },
    "typeRoots": [
      "./frontend/types",
      "./frontend/node_modules/@types",
      "./frontend/node_modules/vuetify/types"
    ],
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "cookie-universal-nuxt",
      "vuetify"
    ]
  },
  "exclude": [
    "node_modules",
    "assets/.nuxt",
    ".nuxt",
    "dist",
    "docs",
    "backend"
  ]
}
