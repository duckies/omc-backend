{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/vuetify/types"],
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "cookie-universal-nuxt",
      "vuetify"
    ]
  },
  "exclude": ["node_modules", "assets/.nuxt", ".nuxt", "dist"]
}
